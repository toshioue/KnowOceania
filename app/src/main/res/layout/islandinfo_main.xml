<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <TextView
        android:id="@+id/countryName"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country Name will go here"
        android:textAllCaps="true"
        android:textColor="@color/ColorHeader"
        android:layout_centerHorizontal="true"
        />

    <ScrollView
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        >
        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/flagPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flag:"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:textColor="@color/ColorHeader"

                />
            <ImageView
                android:id="@+id/flag"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:src="@drawable/temp"
                android:layout_below="@+id/flagPlaceholder"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ColorHeader"
                />

            <TextView
                android:id="@+id/greetingsPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="GREETINGS (HELLO):"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/flag"
                android:textColor="@color/ColorHeader"/>

            <TextView
                android:id="@+id/greetings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/greetingsPlaceholder"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="THIS IS A GREETING HELLO!!!"
                android:textColor="@color/ColorHeader"
                android:textSize="17dp"
                />

            <TextView
                android:id="@+id/historyPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="20dp"
                android:layout_marginTop="25dp"
                android:layout_below="@+id/greetings"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ColorHeader"/>

            <TextView
                android:id="@+id/history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:text="Temporary novice here"
                android:layout_centerHorizontal="true"
                android:padding="10dp"
                android:layout_below="@+id/historyPlaceholder"
                android:textAlignment="center"
                android:textColor="@color/ColorHeader"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/mapPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:layout_below="@+id/history"
                android:text="MAP"
                android:textColor="@color/ColorHeader"/>
            <ImageView
                android:id="@+id/islandMap"
                android:layout_width="460dp"
                android:layout_height="260dp"
                android:src="@drawable/temp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/mapPlaceholder"
                android:textColor="@color/ColorHeader"
                />
            <TextView
                android:id="@+id/popPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/islandMap"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:text="Island Population: "
                android:textColor="@color/ColorHeader"/>

            <TextView
                android:id="@+id/population"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/popPlaceholder"
                android:layout_marginTop="5dp"
                android:textSize="15dp"
                android:text="00000"
                android:textColor="@color/ColorHeader"
                />

            
            <TextView
                android:id="@+id/languagePlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/population"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Languages Spoken:"
                android:textColor="@color/ColorHeader"
                />

            <TextView
                android:id="@+id/languages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/languagePlaceholder"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textAlignment="center"
                android:text="I speak Gibberish yes!!"
                android:textColor="@color/ColorHeader"
                />

            <TextView
                android:id="@+id/factPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/languages"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:text="FACTS ABOUT THIS ISLAND"
                android:textColor="@color/ColorHeader"
                />

            <TextView
                android:id="@+id/facts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/factPlaceholder"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="These are the FACTS!"
                android:textColor="@color/ColorHeader"/>

            <TextView
                android:id="@+id/culturePlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/facts"
                android:textSize="20dp"
                android:text="CULTURE"
                android:textColor="@color/ColorHeader"/>

            <TextView
                android:id="@+id/culture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/culturePlaceholder"
                android:textAlignment="center"
                android:textSize="15dp"
                android:text="this will talk about unique culture"
                android:textColor="@color/ColorHeader"/>


            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="210dp"
                android:layout_below="@+id/culture"
                android:background="@drawable/xavier"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
            <ImageView
                android:id="@+id/temp2"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:padding="20dp"
                android:src="@drawable/temp"
                />

            <ImageView
                android:id="@+id/temp3"
                android:padding="20dp"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/temp"
               />

            <ImageView
                android:id="@+id/temp4"
                android:padding="20dp"
                android:layout_width="250dp"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/temp"
               />
                </LinearLayout>
        </HorizontalScrollView>


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>