<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ColorBlue">

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/quest"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:text="0"
        />
    <TextView
        android:id="@+id/quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:layout_alignParentStart="true"
        android:text="Question: "
        />

    <TextView
        android:id="@+id/tempPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="Points"
        android:textSize="25dp"
        android:textAllCaps="true"
        />
    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tempPoint"
        android:layout_marginRight="5dp"
        android:textSize="25dp"
        android:textAllCaps="true"
        android:text="0"

        />
    <TextView
        android:id="@+id/messageAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/question"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textSize="45dp"
        />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="The Question will go over here yes over here ahahahhahahaha"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/choice1"
        android:layout_marginBottom="20dp"
        android:textColor="@color/ColorHeader"

        />

    <Button
        android:id="@+id/choice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/choice2"
        android:layout_centerHorizontal="true"
        android:text="Answer #1"
        />

    <Button
        android:id="@+id/choice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/choice3"
        android:layout_centerHorizontal="true"
        android:text="Answer #2"
        />

    <Button
        android:id="@+id/choice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Answer #3"
        />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:textAllCaps="true"
        android:text="Next"/>


</RelativeLayout>